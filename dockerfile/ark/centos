FROM centos:7

WRORDIR ~/ark

RUN yum -y install gcc automake autoconf libtool make wget tar

RUN wget https://github.com/google/protobuf/releases/download/v3.6.1/protobuf-all-3.6.1.tar.gz

RUN tar zxvf protobuf-all-3.6.1.tar.gz

RUN cd protobuf-3.6.1
    && ./autogen.sh
    && ./configure
    && make
    && make install
